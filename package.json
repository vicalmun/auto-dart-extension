{
  "name": "dart-auto-extension",
  "displayName": "Dart Auto Extension",
  "description": "Agrega automáticamente la extensión .dart a archivos creados sin extensión en proyectos Flutter/Dart",
  "version": "0.0.1",
  "publisher": "vicalmun",
  "icon": "icon.png",
  "homepage": "https://github.com/vicalmun/dart-auto-extension#readme",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dart-auto-extension.convertToDart",
        "title": "Dart: Convertir a archivo .dart"
      }
    ],
    "configuration": {
      "title": "Dart Auto Extension",
      "properties": {
        "dartAutoExtension.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Habilitar o deshabilitar la adición automática de extensión .dart"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3",
    "@vscode/test-electron": "^2.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vicalmun/auto-dart-extension.git"
  },
  "keywords": [
    "dart",
    "flutter",
    "extension",
    "file"
  ],
  "license": "MIT"
}